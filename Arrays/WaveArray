//Wave Array
//Given sorted array 
//arr[1]>=arr[2]<=arr[3]>=arr[4]
public class Main
{
	public static void main(String[] args) {
		int arr[]={
		    1,2,3,4,5,6,7
		};
		
		for(int i=0;i<arr.length-1;i=i+2)
		{
		    int temp=arr[i];
		    arr[i]=arr[i+1];
		    arr[i+1]=temp;
		}
		
		for(int ele : arr)
		{
		    System.out.print(ele);
		}
	}
}
